<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".MainActivity"
    tools:ignore="ExtraText"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="401dp"
                android:layout_height="731dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="287dp"
                    android:layout_height="119dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="124dp"
                    android:layout_marginEnd="62dp"
                    android:layout_marginBottom="126dp"
                    app:srcCompat="@drawable/image2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInput_login"
                    android:layout_width="307dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginEnd="51dp"
                    android:layout_marginBottom="295dp"
                    android:background="@drawable/input_bg"
                    android:paddingStart="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textAppearance="@style/emailText"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/bg_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="44dp"
                    android:contentDescription="@string/background_design2"
                    app:srcCompat="@drawable/ellipse6" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="84dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:rotation="150"
                    app:srcCompat="@drawable/bg2" />

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_above="@+id/regular_user_btn"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/login_btn"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:lineHeight="24sp"
                    android:text="@string/login"
                    android:textAppearance="@style/log_in" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInput_login"
                    android:layout_width="307dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="306dp"
                    android:layout_marginEnd="54dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_bg"
                    android:orientation="vertical"
                    android:paddingStart="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textAppearance="@style/emailText"
                        tools:ignore="TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="296dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="61dp"
                    android:layout_marginTop="81dp"
                    android:layout_marginEnd="61dp"
                    android:layout_marginBottom="119dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_horizontal|top"
                    android:text="@string/sign_in_to_"
                    android:textColor="@color/color3_btns"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/reset_btn"
                    android:layout_width="146dp"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="129dp"
                    android:layout_marginTop="444dp"
                    android:layout_marginEnd="126dp"
                    android:background="@color/transparent"
                    android:text="@string/reset_passw"
                    android:textAppearance="@style/no_account"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/regular_user_btn"
                    android:layout_width="324dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/bg_viewsched"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/view_schedule"
                    android:textAppearance="@style/log_in" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

