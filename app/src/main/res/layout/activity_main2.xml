    <Button
        android:id="@+id/backBtn2"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="566dp"
        android:background="@drawable/btn_back_bg"
        android:contentDescription="@string/backbtn"
        android:drawableEnd="@drawable/ic_backbtn"
        android:drawableTint="@color/color3_btns"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/save_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/save_btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:lineHeight="24sp"
        android:text="@string/save"
        android:textAppearance="@style/log_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/housenameInput_createaAcount"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInput_createaAcount"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordInput_createAcount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInput_createAcount"
        android:layout_width="241dp"
